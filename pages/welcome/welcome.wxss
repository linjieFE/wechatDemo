page{
  height: 100%;
}

.wrap{
  width: 100%;
  height: 100%;
  display: flex;
  /* 垂直居中 */
  align-items: center; 
  /* 水平居中 */
   justify-content: center; 
}
.welcomeImg{
  width: 200px;
  height: 200px;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
  font-size: 40rpx;
}

.usermotto {
  margin-top: 200px;
}
.hover{
  text-shadow:1px 1px 2px cyan;
}